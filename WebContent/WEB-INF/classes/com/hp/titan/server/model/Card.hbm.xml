			name="groupId"
			column="GROUP_ID"
			type="integer"
			not-null="false"
			length="11"
		/>
		<property
			name="projectId"
			column="PROJECT_ID"
			type="string"
			not-null="false"
			length="50"
		/>
		<property
			name="cardName"
			column="CARD_NAME"
			type="string"
			not-null="false"
			length="200"
		/>
		<property
			name="codeName"
			column="CODE_NAME"
			type="string"
			not-null="false"
			length="200"
		/>
		<property
			name="cardType"
			column="CARD_TYPE"
			type="string"
			not-null="false"
			length="200"
		/>
		<property
			name="cardState"
			column="CARD_STATE"
			type="string"
			not-null="false"
			length="50"
		/>
		<property
			name="cardStatus"
			column="CARD_STATUS"
			type="string"
			not-null="false"
			length="30"
		/>
		<property
			name="sn"
			column="SN"
			type="string"
			not-null="false"
			length="100"
		/>
		<property
			name="pn"
			column="PN"
			type="string"
			not-null="false"
			length="100"
		/>
		<property
			name="vendor"
			column="VENDOR"
			type="string"
			not-null="false"
			length="100"
		/>
		<property
			name="wwn"
			column="WWN"
